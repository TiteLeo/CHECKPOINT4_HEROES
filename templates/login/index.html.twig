{% extends 'base.html.twig' %}

{% block title %}Super Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="row d-flex">
    <h1 class="fs-1 text-center color-title ">Identification</h1>
    <form action="{{ path('login') }}" method="post">
        <div class="required-file">
            <div class="row">
                <div class="col-12 mb-5">
                    <h3 class="text-center mt-4 fs-6"><span class="color-required-file"> * champs obligatoire </span></h3>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <input class="case" type="text" placeholder="Email*" id="username" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <input class="case" type="password" placeholder="Password*" id="password" name="_password"/>
        </div>
        <div class="button-form d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-danger btn-lg">Se connecter</button>
        </div>
    </form>

{% endblock %}