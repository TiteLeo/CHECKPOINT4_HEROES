{% extends 'base.html.twig' %}

{% block title %} Les Supers Vilains{% endblock %}

{% block body %}
    <div class="container-fluid mb-5">
        <div class="row profil mt-5">
            <div class="col-11 col-sm-9 col-md-7 col-lg-10 mx-auto justify-content-center p-3 border border-1">
                <h1 class="display-2 text-center mb-5"> Les Gros Moches! <a href="{{ path ('home') }}"><i class="fas fa-mask"></i></a></h1>
                <h2 class="text-center mb-5">Qui auraient bien besoin d'une petite psychothérapie!!</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center flex-wrap m-3 mt-3 text-center">
        {% for character in characters %}
            <div class="col-md-3 d-flex flex-column mt-5">
                <div class="card text-center m-3 bg-white shadow">
                    <div class="card-header p-3 bg-white p-4 shadow">
                        <img class="img-fluid d-block mb-3 mx-auto" src="{{ character.url }}" width="400" height="200" alt="Card image cap">
                        <h5 class="card-title">{{ character.heroName}}</h5>
                    </div>
                    <div class="card-body p-3 container-tertiary">
                        <p class="card-text text-dark">Identité : {{ character.realName }}</p>
                        <p class="card-text text-dark">Force : {{ character.strength }}</p>
                        <div class="text-center m-3"><a href="{{ path('home') }}" type="button" class="btn btn-color">Voir le Super Héros </a></div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>


{% endblock %}